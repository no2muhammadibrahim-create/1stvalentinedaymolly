<script>
const app = document.getElementById("app");
const name = "Molly";

function likeYes() {
  app.innerHTML = `
    <h1>How much do you love me?</h1>
    <input class="slider" type="range" min="0" max="100" value="50" oninput="loveLevel(this.value)">
    <p id="loveText">This much!</p>
    <button onclick="nextQuestion()">Next â¤ï¸</button>
  `;
}

function likeNo() {
  alert("I don't like you, I love you! â¤ï¸");
}

function loveLevel(val) {
  const text = document.getElementById("loveText");
  if (val > 80) text.textContent = "WOOOOW You love me that much?? ğŸ¥°ğŸš€ğŸ’";
  else if (val > 50) text.textContent = "To infinity and beyond! ğŸš€ğŸ’";
  else text.textContent = "And beyond! ğŸ¥°";
}

function nextQuestion() {
  app.innerHTML = `
    <h1>Will you be my Valentine...?</h1>
    <button onclick="celebrate()">Yes!</button>
    <button onclick="runAway(this)">No</button>
  `;
}

function runAway(btn) {
  btn.style.position = "absolute";
  btn.style.left = Math.random() * 80 + "%";
  btn.style.top = Math.random() * 80 + "%";
}

function celebrate() {
  app.innerHTML = `
    <h1 class="celebrate">Yay! I'm the luckiest person...</h1>
    <p>Now come get your gift...</p>
    <div style="font-size:2rem;">ğŸğŸ’–ğŸ¤—ğŸ’ğŸ’‹â¤ï¸ğŸ’•</div>
  `;
  explodeHearts();
}

function explodeHearts() {
  const emojis = ['â¤ï¸','ğŸ’–','ğŸ’','ğŸ’—','ğŸ’“','ğŸ§¸','ğŸ»'];
  for (let i = 0; i < 30; i++) {
    const span = document.createElement("span");
    span.className = "floating";
    span.textContent = emojis[Math.floor(Math.random() * emojis.length)];
    span.style.left = Math.random() * 100 + "vw";
    span.style.animationDuration = 10 + Math.random() * 10 + "s";
    document.body.appendChild(span);
  }
}
